{% extends 'admin/index.html.twig' %}

{% block admin %}

<section class="container is-fluid">

    <h2 class="title has-text-centered" style="margin: 1em;">{{category.name}}</h2>

    {% for item in items %}
    <div class="card" style="margin: 1em;">
        <header class="card-header">
          <p class="card-header-title">
            {{item.title}}
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <h5>{{item.subtitle}}</h5>
            <h6>Description</h5>
            <p>{{item.description}}</p>
            <h6>Periode</h6>
            <p>{{item.period}}</p>
          </div>
        </div>
        <footer class="card-footer" style="padding: 0.5em;">
            <a href="{{path('admin.item.edit', {id: item.id})}}" class="button ">Editer</a>
        </footer>
      </div>
    {% endfor %}

</section>


{% endblock %}